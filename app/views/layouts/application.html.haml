!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title Производственный план онлайн
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"

    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"


  %body
    .navbar.navbar-default.navbar-static-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to t('title'), root_path, class: 'navbar-brand'
        .navbar-collapse.collapse.navbar-responsive-collapse
          - if user_signed_in?
            %ul.nav.navbar-nav
              %li{ class: controller_name == 'items' ? 'active' : '' }= link_to t('catalog'), items_path
              %li= link_to t('plans'), plans_path
          %ul.nav.navbar-nav.navbar-right
            - if try(:user_signed_in?)
              %li.dropdown
                = link_to "#", class: 'dropdown-toggle', role: :button, 'aria-expanded' => false, 'data-toggle' => 'dropdown' do
                  = t('profile')
                  %span.caret
                %ul.dropdown-menu{ role: :menu }
                  %li= link_to 'Профиль', edit_user_registration_path
                  %li= link_to 'Выход', destroy_user_session_path, method: :delete
            - else
              %li= link_to 'Вход', new_user_session_path

    .container
      .row
        - klass = yield(:sidebar).present? ? 9 : 12
        %div{ class: "col-lg-#{klass}" }
          - if notice.present?
            = notice
          - if alert.present?
            = alert
          = yield
        - if yield(:sidebar).present?
          .col-lg-3
            .well.sidebar-nav
              %h3 Sidebar
              %ul.nav.nav-list
                %li.nav-header Sidebar
                %li= link_to "Link 1", "/path1"
                %li= link_to "Link 2", "/path2"
                %li= link_to "Link 3", "/path3"
      %footer
        %p
          &copy; #{t('title')} Сделано
          = link_to 'redde', 'http://redde.ru', target: :_blank
